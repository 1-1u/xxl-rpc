<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<context:component-scan base-package="com.xxl.rpc.demo.service.impl" />
	
	<!-- netty-rpc server init -->
    <bean class="com.xxl.rpc.netcom.NetComServerFactory">
    	<property name="port" value="7080" />
    	<property name="netcom" value="NETTY" />
    	<property name="serialize" value="HESSIAN" />
    	<property name="zookeeper_switch" value="false" />
    </bean>

</beans>
